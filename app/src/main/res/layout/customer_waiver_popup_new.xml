<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        tools:ignore="UselessParent">


        <ScrollView
            android:id="@+id/popUpScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/relative_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/allside"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Your Name:"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/edt_your_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="0.5"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        android:gravity="center|start"
                        android:hint="Enter Your Name"
                        android:paddingStart="@dimen/dp_10"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/allside"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Last Name:"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/edt_your_last_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="0.5"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        android:gravity="center|start"
                        android:hint="Enter Your Last Name"
                        android:paddingStart="@dimen/dp_10"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="normal" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:gravity="center"
                    android:text="If booking for minor"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/allside"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Minor Name:"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/edt_minor_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:gravity="center|start"
                        android:hint="Enter Minor Name"
                        android:paddingStart="@dimen/dp_10"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/allside"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="Minor Last Name:"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/edt_minor_last_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="0.5"
                        android:background="@android:color/transparent"
                        android:gravity="center|start"
                        android:hint="Enter Minor Last Name"
                        android:paddingStart="@dimen/dp_10"
                        android:inputType="text"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="normal" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/tv_descr_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:text="@string/description_loc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:visibility="visible"
                    tools:ignore="UnusedAttribute" />


                <WebView
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:text="@string/description_loc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone"
                    tools:ignore="UnusedAttribute,WebViewLayout" />


                <Button
                    android:id="@+id/btn_approve_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_descr_new"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/approve"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>