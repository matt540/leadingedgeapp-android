<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/dp_5">


        <LinearLayout
            android:id="@+id/linear_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:baselineAligned="false"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/linear_dashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:padding="@dimen/dp_1"
                    android:src="@color/white"
                    android:visibility="invisible"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/image_dashboard"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:src="@drawable/dashboard"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:padding="@dimen/dp_1"
                    android:src="@color/white"
                    android:visibility="invisible"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:src="@drawable/search"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_sessions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_session"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:padding="@dimen/dp_1"
                    android:src="@color/white"
                    android:visibility="invisible"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/image_session"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:src="@drawable/booksession"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Sessions"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_progression"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_progression"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:padding="@dimen/dp_1"
                    android:src="@color/white"
                    android:visibility="invisible"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/image_progression"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:src="@drawable/progressions"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_progression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progressions"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_myAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/line_myAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:padding="@dimen/dp_1"
                    android:src="@color/white"
                    android:visibility="invisible"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/image_myAccount"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_5"
                    android:src="@drawable/account"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_myAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myAccount"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>